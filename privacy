    <script>
        function confirmPolicy() {
            // Simulate agreement confirmation
            const btn = document.querySelector('.btn');
            btn.innerHTML = '<i class="fas fa-check-circle"></i> Thank You for Agreeing';
            btn.style.backgroundColor = '#4caf50';
            btn.disabled = true;
            
            // Show a confirmation message
            alert("Thank you for reviewing our Privacy Policy. Your preferences have been saved.");
            
            // This is where you would implement actual consent recording logic
        }
        
